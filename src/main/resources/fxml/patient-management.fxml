<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml/1" spacing="8" fx:controller="com.hospital.controller.PatientManagementController">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>

    <HBox spacing="8">
        <TextField fx:id="txtSearch" promptText="Search by name..." />
        <Button text="Search" onAction="#onSearch" />
        <Region HBox.hgrow="ALWAYS" />
        <Button text="Add" onAction="#onAdd" />
        <Button text="Edit" onAction="#onEdit" />
        <Button text="Delete" onAction="#onDelete" />
    </HBox>
    <TableView fx:id="tablePatients" prefHeight="400">
        <columns>
            <TableColumn text="ID" fx:id="colId" />
            <TableColumn text="First Name" fx:id="colFirst" />
            <TableColumn text="Last Name" fx:id="colLast" />
            <TableColumn text="Phone" fx:id="colPhone" />
            <TableColumn text="Email" fx:id="colEmail" />
        </columns>
    </TableView>
</VBox>