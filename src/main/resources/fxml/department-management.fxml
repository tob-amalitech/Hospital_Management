<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>

<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.hospital.controller.DepartmentManagementController" spacing="15" style="-fx-background-color: #f8f9fa;">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <!-- Header Section -->
    <VBox spacing="5">
        <Label text="ðŸ¥ Department Management" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
        <Label text="Manage hospital departments and their locations" style="-fx-font-size: 12px; -fx-text-fill: #7f8c8d;"/>
    </VBox>

    <!-- Department Creation Form -->
    <VBox spacing="10" style="-fx-background-color: white; -fx-padding: 15; -fx-background-radius: 5; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 2, 0, 0, 1);">
        <Label text="âž• Add New Department" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #34495e;"/>

        <GridPane hgap="10" vgap="10">
            <columnConstraints>
                <ColumnConstraints minWidth="100" prefWidth="120"/>
                <ColumnConstraints minWidth="200" prefWidth="300"/>
            </columnConstraints>

            <Label text="Department Name:" GridPane.columnIndex="0" GridPane.rowIndex="0" style="-fx-font-weight: bold;"/>
            <TextField fx:id="txtName" GridPane.columnIndex="1" GridPane.rowIndex="0" promptText="Enter department name" style="-fx-pref-width: 250;"/>

            <Label text="Location:" GridPane.columnIndex="0" GridPane.rowIndex="1" style="-fx-font-weight: bold;"/>
            <TextField fx:id="txtLocation" GridPane.columnIndex="1" GridPane.rowIndex="1" promptText="Enter department location" style="-fx-pref-width: 250;"/>
        </GridPane>

        <HBox spacing="10" alignment="CENTER_RIGHT">
            <Button text="ðŸ”„ Refresh" onAction="#onRefresh" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8 15;"/>
            <Button fx:id="btnAdd" text="âž• Add Department" onAction="#onAdd" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8 15; -fx-font-size: 14px;"/>
        </HBox>
    </VBox>

    <!-- Departments List Section -->
    <VBox spacing="10" style="-fx-background-color: white; -fx-padding: 15; -fx-background-radius: 5; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 2, 0, 0, 1);" VBox.vgrow="ALWAYS">
        <HBox spacing="10" alignment="CENTER_LEFT">
            <Label text="ðŸ“‹ Departments" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #34495e;"/>
            <Label fx:id="lblDepartmentCount" text="(0 departments)" style="-fx-font-size: 12px; -fx-text-fill: #7f8c8d;"/>
            <Region HBox.hgrow="ALWAYS"/>
            <TextField fx:id="txtSearch" promptText="Search departments..." style="-fx-pref-width: 200;"/>
            <Button text="ðŸ” Search" onAction="#onSearch" style="-fx-background-color: #95a5a6; -fx-text-fill: white;"/>
        </HBox>

        <TableView fx:id="tableDepartments" prefHeight="400" style="-fx-background-color: white;">
            <columns>
                <TableColumn text="ID" fx:id="colId" prefWidth="80" style="-fx-alignment: CENTER;"/>
                <TableColumn text="ðŸ¥ Department Name" fx:id="colName" prefWidth="250"/>
                <TableColumn text="ðŸ“ Location" fx:id="colLocation" prefWidth="200"/>
                <TableColumn text="ðŸ‘¥ Staff Count" fx:id="colStaffCount" prefWidth="120" style="-fx-alignment: CENTER;"/>
                <TableColumn text="âš¡ Actions" fx:id="colActions" prefWidth="150"/>
            </columns>
        </TableView>

        <!-- Action Buttons -->
        <HBox spacing="10" alignment="CENTER_LEFT">
            <Button text="âœï¸ Edit Selected" onAction="#onEdit" style="-fx-background-color: #f39c12; -fx-text-fill: white; -fx-font-weight: bold;"/>
            <Button text="ðŸ—‘ï¸ Delete Selected" onAction="#onDelete" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold;"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Button text="ðŸ“Š View Statistics" onAction="#onViewStats" style="-fx-background-color: #9b59b6; -fx-text-fill: white; -fx-font-weight: bold;"/>
        </HBox>
    </VBox>

    <!-- Status Bar -->
    <HBox spacing="10" alignment="CENTER_LEFT" style="-fx-background-color: #ecf0f1; -fx-padding: 10; -fx-background-radius: 3;">
        <Label text="Status:" style="-fx-font-weight: bold;"/>
        <Label fx:id="lblStatus" text="Ready" style="-fx-text-fill: #27ae60;"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Label text="Last updated:" style="-fx-font-size: 11px; -fx-text-fill: #7f8c8d;"/>
        <Label fx:id="lblLastUpdate" text="Never" style="-fx-font-size: 11px; -fx-text-fill: #7f8c8d;"/>
    </HBox>
</VBox>